<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <org.cryse.widget.FixedAspectRatioLinearLayout
        android:id="@+id/listview_item_novel_bg_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp"
        android:scaleType="fitXY"
        app:far_height_weight="4"
        app:far_width_weight="3"
        app:far_fixed_orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/listview_item_novel_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/text_size_subhead"
                android:tag="text_primary"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/listview_item_novel_info1_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_body1"
                android:tag="text_secondary">

            </TextView>
        </FrameLayout>
    </org.cryse.widget.FixedAspectRatioLinearLayout>
</android.support.v7.widget.CardView>