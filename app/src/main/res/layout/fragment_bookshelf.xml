<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NovelBookShelfFragment">


    <org.cryse.widget.recyclerview.SuperRecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/novel_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srv_empty="@layout/layout_empty_view"
        app:srv_listClipToPadding="false"
        app:srv_listDivider="@android:color/transparent"
        app:srv_listDividerHeight="0dp"
        app:srv_listPadding="2dp"
        app:srv_scrollbarStyle="outsideOverlay"
        app:srv_moreProgress="@layout/layout_more_progress"
        app:srv_columns="@integer/boolshelf_list_col"/>

    <FrameLayout
        android:id="@+id/search_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>