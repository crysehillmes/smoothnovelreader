<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <org.cryse.widget.recyclerview.SuperRecyclerView
        android:id="@+id/novel_searchlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:srv_columns="@integer/online_list_col"
        app:srv_empty="@layout/layout_empty_view"
        app:srv_listClipToPadding="false"
        app:srv_listDivider="@android:color/transparent"
        app:srv_listDividerHeight="0dp"
        app:srv_listPadding="2dp"
        app:srv_moreProgress="@layout/layout_more_progress"
        app:srv_scrollbarStyle="outsideOverlay" />

    <View
        android:id="@+id/view_search_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="#88000000"
        android:elevation="6dp"
        android:visibility="gone" />

    <org.cryse.widget.persistentsearch.PersistentSearchView
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/toolbar_elevation"
        app:persistentSV_displayMode="displayAsToolbarBackArrow"
        app:persistentSV_editHintText="Search"
        app:persistentSV_editHintTextColor="?android:textColorHint"
        app:persistentSV_editTextColor="?android:textColorPrimary"
        app:persistentSV_logoDrawable="@drawable/ic_launcher"
        app:persistentSV_searchCardElevation="4dp"
        app:persistentSV_searchTextColor="?android:textColorPrimary" />

</FrameLayout>