<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:gravity="center_vertical"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/detail_achieve_item_rank"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:textColor="?attr/smooth_theme_text_color_body1"
        android:textSize="@dimen/text_size_body2"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:text="202"/>
    <TextView
        android:id="@+id/detail_achieve_item_name"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/smooth_theme_text_color_body1"
        android:textSize="@dimen/text_size_body2"
        android:drawablePadding="4dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="2dp"
        android:text="完结排行榜"/>

    <TextView
        android:id="@+id/detail_achieve_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/smooth_theme_text_color_body1"
        android:textSize="@dimen/text_size_body2"
        android:gravity="end|center_vertical"
        android:text="2014年04月"/>
</LinearLayout>