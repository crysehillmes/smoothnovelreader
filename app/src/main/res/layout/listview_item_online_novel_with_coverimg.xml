<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="?attr/smooth_theme_card_bg_color"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/listview_item_novel_image_imageview"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="0dp"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="96dp"
        android:padding="16dp">
        <TextView
            android:id="@+id/listview_item_novel_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/smooth_theme_text_color_primary"
            android:textSize="@dimen/text_size_subhead">

        </TextView>

        <TextView
            android:id="@+id/listview_item_novel_info1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listview_item_novel_title_textview"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/smooth_theme_text_color_secondary"
            android:textSize="@dimen/text_size_caption" />

        <TextView
            android:id="@+id/listview_item_novel_info2_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listview_item_novel_info1_textview"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="?attr/smooth_theme_text_color_tint"
            android:textSize="@dimen/text_size_caption"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>