<?xml version="1.0" encoding="utf-8"?>
<org.cryse.novelreader.util.navidrawer.NavigationDrawerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRR"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="@string/placeholder_lorem_ipsum"
        android:textSize="@dimen/text_size_subhead"
        android:textColor="?attr/smooth_theme_navigation_drawer_text_color"/>

</org.cryse.novelreader.util.navidrawer.NavigationDrawerItemView>