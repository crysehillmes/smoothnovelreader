<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseTheme">
        <attr name="actionBarIconColor" format="color" />
        <attr name="actionBarInsetStart" format="dimension" />
        <attr name="spinnerBarInsetStart" format="dimension" />
        <attr name="popupItemBackground" format="reference" />
        <attr name="photoItemForeground" format="reference" />
        <attr name="photoItemForegroundBorderless" format="reference" />
    </declare-styleable>

    <declare-styleable name="FixedAspectRatioAttr">
        <attr name="far_fixed_orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="far_height_weight" format="integer"/>
        <attr name="far_width_weight" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FlipViewController">
        <attr name="fvc_orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>

        <attr name="animationBitmapFormat" format="enum">
            <enum name="ARGB_8888" value="0" />
            <enum name="ARGB_4444" value="1" />
            <enum name="RGB_565" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ThemeAttributes">
        <attr name="isFloatingWindow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BottomSheetItemAttributes">
        <attr name="bsi_textColor" format="reference|color" />
        <attr name="bsi_text" format="string" />
        <attr name="bsi_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="fab_drawable" format="integer"/>
        <attr name="fab_color" format="color"/>
        <attr name="fab_shadowRadius" format="float"/>
        <attr name="fab_shadowDx" format="float"/>
        <attr name="fab_shadowDy" format="float"/>
        <attr name="fab_shadowColor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="NumberPicker">
        <attr name="np_max" format="integer" />
        <attr name="np_min" format="integer" />
        <attr name="np_step" format="integer" />
        <attr name="np_textSize" format="dimension" />
        <attr name="np_textColor" format="color" />
        <attr name="np_buttonColor" format="color" />
        <attr name="np_buttonWidth" format="dimension" />
        <attr name="np_buttonDecreaseIcon" format="reference" />
        <attr name="np_buttonIncreaseIcon" format="reference" />
    </declare-styleable>
</resources>